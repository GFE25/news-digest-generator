name: Test Feedparser

on:
  push:
    paths:
      - '**.py'
  workflow_dispatch:  # 手動実行も可能にする

jobs:
  test-feedparser:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.10'

      - name: Install dependencies
        run: pip install feedparser

      - name: Run test_feedparser.py
        run: python test_feedparser.py
